{% include 'shared/header.html.twig' %}
<h1>Ajouter un streamer</h1>
<div class="container">
    <form method="post">
        <div class="form-group">
            <label for="name">Nom</label>
            <input type="text" class="form-control" id="name" placeholder="Nom">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="dateInscription">Date inscription</label>
            <input type="date" class="form-control" id="dateInscription">
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="certified" value="certified">
            <label class="form-check-label" for="certified">Certified</label>
        </div>
        <button type="submit" class="btn btn-primary">Ajouter</button>
    </form>
</div>
